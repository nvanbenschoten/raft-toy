PROTOC ?= protoc

GOPATH_DIR := ../../../../

VENDOR_DIR := ../vendor
GOGO_PROTOBUF_PACKAGE := github.com/gogo/protobuf
GOGO_PROTOBUF_PATH := $(VENDOR_DIR)/$(GOGO_PROTOBUF_PACKAGE)
PROTOBUF_PATH  := $(GOGO_PROTOBUF_PATH)

.PHONY: regenerate
regenerate:
	@$(PROTOC) --gogofaster_out=plugins=grpc:. -I=.:$(VENDOR_DIR):$(PROTOBUF_PATH):$(GOPATH_DIR) *.proto

.PHONY: clean
clean:
	@$(RM) *.pb.*
